{
    "extends": "airbnb",
    "parser": "@typescript-eslint/parser",
    "overrides": [
        {
            "files": "src",
            "excludedFiles": "test"
        }
    ],
    "rules": {
        "indent": ["error", 4],
        "no-trailing-spaces": "warn",
        "quotes": ["error", "double"],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }],
        "max-len": ["error", { "code": 125 }],
        "lines-between-class-members": "off",
        "no-plusplus": "off"
    }
}
